<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.h2kresearch.syllablegame.ResultActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
      android:id="@+id/LinearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="10dp"
      android:background="@color/titleBarColor"
      android:orientation="horizontal">
      <TextView
        android:id="@+id/textViewL"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left|center_vertical"
        android:text="이전"
        android:textAlignment="gravity"
        android:textColor="@color/highlightColor"
        android:textSize="14dp" />
      <TextView
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="마이페이지"
        android:textAlignment="gravity"
        android:textColor="@color/titleBarTextColor"
        android:textSize="18dp" />
      <TextView
        android:id="@+id/textViewR"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="right|center_vertical"
        android:text="종료하기"
        android:textAlignment="gravity"
        android:textColor="@color/highlightColor"
        android:textSize="14dp" />
    </LinearLayout>
    <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5" />
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="2"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/apptitle"
        tools:layout_editor_absoluteX="670dp"
        tools:layout_editor_absoluteY="321dp" />
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="4"
      android:orientation="horizontal">
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">
        <Space
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="2" />
        <Button
          android:id="@+id/button1"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"
          android:background="@drawable/roundcorner_click"
          android:text="오늘의 결과"
          android:textAllCaps="false"
          android:textColor="@color/button_text"
          android:textSize="24dp" />
        <Space
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1" />
        <Button
          android:id="@+id/button3"
          android:textStyle="bold"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="3"
          android:background="@drawable/roundcorner_click"
          android:text="종합 성취도"
          android:textAllCaps="false"
          android:textColor="@color/button_text"
          android:textSize="24dp" />
        <Space
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1" />
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal">
          <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="추천하기"
            android:textAlignment="center"
            android:textColor="@color/textLoginMenuColor"
            android:textSize="18dp" />
          <TextView
            android:id="@+id/textView5"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/textLoginMenuBarColor"
            android:text="간격"
            android:textColor="@android:color/transparent" />
          <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="고객센터"
            android:textAlignment="center"
            android:textColor="@color/textLoginMenuColor"
            android:textSize="18dp" />
          <TextView
            android:id="@+id/textView6"
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/textLoginMenuBarColor"
            android:text="간격"
            android:textColor="@android:color/transparent" />
          <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="로그아웃"
            android:textAlignment="center"
            android:textColor="@color/textLoginMenuColor"
            android:textSize="18dp" />
        </LinearLayout>
        <Space
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1" />
      </LinearLayout>
      <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    </LinearLayout>
    <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="0.5" />
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
