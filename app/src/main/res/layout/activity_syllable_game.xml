<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.h2kresearch.syllablegame.SyllableGameActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:weightSum="10"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:layout_constraintLeft_creator="1">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar"
            android:layout_marginBottom="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:weightSum="10"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/vowelBottom"
                    android:layout_width="200dp"
                    android:layout_height="198dp"
                    android:background="@drawable/blank_3"
                    android:layout_below="@+id/vowelLeft"
                    android:layout_alignStart="@+id/consonantBlock">

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/consonantBlock"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="299dp"
                    android:layout_marginTop="31dp"
                    android:background="@drawable/blank_1">

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/vowelLeft"
                    android:layout_width="250dp"
                    android:layout_height="199dp"
                    android:layout_alignStart="@+id/consonantBlock"
                    android:layout_alignTop="@+id/consonantBlock"
                    android:layout_marginStart="148dp"
                    android:background="@drawable/blank_2">

                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="50dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="504dp"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:background="@drawable/button_border">

                <LinearLayout
                    android:id="@+id/consonantList"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/consonant1"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:contentDescription="ㄱ"
                        app:srcCompat="@drawable/consonant1" />

                    <ImageView
                        android:id="@+id/consonant2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:contentDescription="ㄴ"
                        app:srcCompat="@drawable/consonant2" />

                    <ImageView
                        android:id="@+id/consonant3"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:contentDescription="ㄷ"
                        app:srcCompat="@drawable/consonant3" />

                    <ImageView
                        android:id="@+id/consonant4"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:contentDescription="ㄹ"
                        app:srcCompat="@drawable/consonant4" />

                    <ImageView
                        android:id="@+id/consonant5"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:contentDescription="ㅁ"
                        app:srcCompat="@drawable/consonant5" />

                    <ImageView
                        android:id="@+id/consonant6"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:contentDescription="ㅂ"
                        app:srcCompat="@drawable/consonant6" />
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="3dp"
                android:background="@drawable/button_border1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/vowel1"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="ㅏ"
                        app:srcCompat="@drawable/vowel1" />

                    <ImageView
                        android:id="@+id/vowel2"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="ㅑ"
                        app:srcCompat="@drawable/vowel2" />

                    <ImageView
                        android:id="@+id/vowel3"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="ㅓ"
                        app:srcCompat="@drawable/vowel3" />

                    <ImageView
                        android:id="@+id/vowel4"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="ㅕ"
                        app:srcCompat="@drawable/vowel4" />

                    <ImageView
                        android:id="@+id/vowel5"
                        android:layout_width="77dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="ㅗ"
                        app:srcCompat="@drawable/vowel5" />

                    <ImageView
                        android:id="@+id/vowel6"
                        android:layout_width="77dp"
                        android:layout_height="96dp"
                        android:layout_marginLeft="10dp"
                        android:contentDescription="ㅛ"
                        app:srcCompat="@drawable/vowel6" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
